
{
    "manifest_version": 2,
    "name": "Grade Average Calculator",
    "description": "Automatically calculates and displays the average grade.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gibz.zg.ch/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        "css/popup.css",
        "js/popup.js"
    ]
}